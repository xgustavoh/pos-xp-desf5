generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int       @id @default(autoincrement())
  name          String
  description   String

  price         Decimal
  discount      Decimal?
  discountType  DiscountType?
  stock         Int @default(0)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
}

enum DiscountType {
  PERCENTAGE
  FIXED
}